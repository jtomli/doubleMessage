<div class="container">
  <form method="POST" action="/login">
    <div class="form-group">
    <input type="text" name="username" class="form-control" placeholder="Name">
  </div>
  <div class="form-group">
    <input type="password" name="password" class="form-control" placeholder="Password">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Login</button>
  </div>
  </form>
  <div class="options">
    <a href="/signup"><button class="btn btn-default">Sign Up</button></a>
    <a href="auth/facebook"><button class="btn btn-primary">Login with Facebook</button></a>
    <a href="auth/twitter"><button class="btn btn-info">Login with Twitter</button></a>
  </div>

</div>
